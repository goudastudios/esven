    <script>
      // Update connection lines based on node positions
      function updateConnectionLines() {
        const container = document.querySelector(
          ".home-hero-connection-network"
        );
        if (!container) return;

        const centralNode = container.querySelector(".central");
        const founderNode = container.querySelector(".founder");
        const investorNode = container.querySelector(".investor");
        const advisorNode = container.querySelector(".advisor");
        const talentNode = container.querySelector(".talent");

        const lines = {
          founder: document.querySelector(".founder-line"),
          investor: document.querySelector(".investor-line"),
          advisor: document.querySelector(".advisor-line"),
          talent: document.querySelector(".talent-line"),
        };

        function updateLine(central, node, line) {
          if (!central || !node || !line) return;

          const containerRect = container.getBoundingClientRect();
          const centralRect = central.getBoundingClientRect();
          const nodeRect = node.getBoundingClientRect();

          // Calculate center points relative to container
          const centralX =
            centralRect.left + centralRect.width / 2 - containerRect.left;
          const centralY =
            centralRect.top + centralRect.height / 2 - containerRect.top;
          const nodeX = nodeRect.left + nodeRect.width / 2 - containerRect.left;
          const nodeY = nodeRect.top + nodeRect.height / 2 - containerRect.top;

          // Calculate angle for connection point
          const angle = Math.atan2(nodeY - centralY, nodeX - centralX);
          const centralRadius = 50; // Half of central node width
          const nodeRadius = 30; // Half of other nodes width

          // Calculate connection points on the edge of the circles
          const startX = centralX + Math.cos(angle) * centralRadius;
          const startY = centralY + Math.sin(angle) * centralRadius;
          const endX = nodeX - Math.cos(angle) * nodeRadius;
          const endY = nodeY - Math.sin(angle) * nodeRadius;

          // Update line coordinates
          line.setAttribute("x1", startX);
          line.setAttribute("y1", startY);
          line.setAttribute("x2", endX);
          line.setAttribute("y2", endY);
        }

        // Update all lines
        updateLine(centralNode, founderNode, lines.founder);
        updateLine(centralNode, investorNode, lines.investor);
        updateLine(centralNode, advisorNode, lines.advisor);
        updateLine(centralNode, talentNode, lines.talent);
      }

      // Initial update
      document.addEventListener("DOMContentLoaded", () => {
        updateConnectionLines();

        // Update on window resize
        let resizeTimer;
        window.addEventListener("resize", () => {
          clearTimeout(resizeTimer);
          resizeTimer = setTimeout(updateConnectionLines, 250);
        });

        // Update after animations complete
        setTimeout(updateConnectionLines, 1000);
      });
    </script>
