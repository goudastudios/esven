<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title || 'Team | Esven' %></title>
    <link rel="stylesheet" href="/css/global.css" />
    <link rel="stylesheet" href="/css/team.css" />
  </head>
  <body>
    <%- include('partials/header') %>
    <main>
      <!-- Team Hero -->
      <section class="team-hero">
        <div class="container">
          <h1>The People Behind the Vision</h1>
          <p class="subtitle">
            Every great investment starts with understanding people. Our team
            brings together diverse backgrounds, shared values, and a deep
            commitment to building lasting relationships with founders.
          </p>
        </div>
      </section>

      <!-- Team Principles -->
      <section class="team-principles">
        <div class="container">
          <div class="principles-grid">
            <div class="principle">
              <div class="principle-icon">âš¡</div>
              <h3>Speed</h3>
              <p>
                Quick decisions, fast execution. We respect founders' time and
                move at startup speed.
              </p>
            </div>
            <div class="principle">
              <div class="principle-icon">ðŸŽ¯</div>
              <h3>Focus</h3>
              <p>
                Deep expertise in select sectors. We invest where we can add the
                most value.
              </p>
            </div>
            <div class="principle">
              <div class="principle-icon">ðŸš€</div>
              <h3>Scale</h3>
              <p>
                Building companies that define categories and create lasting
                value at global scale.
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Team Grid -->
      <section class="team-grid-section">
        <div class="container">
          <h2 class="section-title">Investment Partners</h2>
          <div class="team-grid">
            <% if (typeof teamMembers !== 'undefined' &&
            Array.isArray(teamMembers)) { %> <% teamMembers.forEach(member => {
            %>
            <div
              class="team-member"
              data-id="<%= member.id %>"
              data-bio="<%= member.bio %>"
            >
              <div class="member-image">
                <img
                  src="<%= member.image %>"
                  alt="<%= member.name %>"
                  loading="lazy"
                />
              </div>
              <div class="member-info">
                <h3 class="member-name"><%= member.name %></h3>
                <p class="member-title"><%= member.title %></p>
                <p class="member-about"><%= member.about %></p>
                <div class="member-metrics">
                  <% member.metrics.forEach(metric => { %>
                  <div class="metric">
                    <span class="metric-value"><%= metric.value %></span>
                    <span class="metric-label"><%= metric.label %></span>
                  </div>
                  <% }) %>
                </div>
                <div class="member-links">
                  <% member.links.forEach(link => { %> <% if
                  (link.text.toLowerCase().includes('linkedin')) { %>
                  <a
                    href="<%= link.url %>"
                    class="member-link linkedin-btn"
                    target="_blank"
                    rel="noopener"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="20"
                      height="20"
                      viewBox="0 0 24 24"
                      fill="#0A66C2"
                      class="linkedin-icon"
                    >
                      <path
                        d="M20.447 20.452h-3.554v-5.569c0-1.328-.026-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                      />
                    </svg>
                  </a>
                  <% } else if (link.text.toLowerCase().includes('bio')) { %>
                  <button
                        type="button"
                        class="portfolio-company-link bio-trigger"
                        data-bio="<%= member.bio %>"
                        aria-haspopup="dialog"
                        aria-controls="teamModal"
                      >
                        <%= link.text %>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                          <polyline points="15 3 21 3 21 9"></polyline>
                          <line x1="10" y1="14" x2="21" y2="3"></line>
                        </svg>
                      </button>
                  <% } %> <% }); %>
                </div>
              </div>
            </div>
            <% }); %> <% } else { %>
            <p>No team members found.</p>
            <% } %>
          </div>
        </div>
      </section>
    </main>
    <%- include('partials/footer') %>

    <!-- Team Member Modal -->
    <div id="teamModal" class="team-modal">
      <div class="team-modal-content">
        <span class="close-modal">&times;</span>
        <div class="modal-container">
          <div class="modal-image">
            <img id="modalMemberImage" src="" alt="" />
          </div>
          <div class="modal-info">
            <h2 id="modalMemberName"></h2>
            <p class="modal-title" id="modalMemberTitle"></p>
            <div class="modal-metrics" id="modalMemberMetrics">
              <!-- Metrics will be inserted here by JavaScript -->
            </div>
            <p class="modal-bio" id="modalMemberBio"></p>
            <div class="modal-links" id="modalMemberLinks">
              <!-- Links will be inserted here by JavaScript -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
