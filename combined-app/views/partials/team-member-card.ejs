<div class="team-member-card">
  <div class="team-member-image">
    <img src="<%= member.image %>" alt="<%= member.name %>" />
  </div>
  <div class="team-member-info">
    <h3 class="team-member-name"><%= member.name %></h3>
    <p class="team-member-title"><%= member.title %></p>
    <p class="team-member-about"><%= member.about %></p>
    
    <% if (member.metrics && member.metrics.length) { %>
    <div class="team-member-metrics">
      <% member.metrics.forEach(metric => { %>
      <div class="team-metric">
        <span class="team-metric-value"><%= metric.value %></span>
        <span class="team-metric-label"><%= metric.label %></span>
      </div>
      <% }) %>
    </div>
    <% } %>
    
    <% if (member.links && member.links.length) { %>
    <div class="team-member-actions">
      <% member.links.forEach(link => { %>
        <% if (link.text.toLowerCase().includes('linkedin')) { %>
          <a href="<%= link.url %>" class="team-social-link linkedin-btn" target="_blank" rel="noopener">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="#0A66C2" class="linkedin-icon">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.026-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        <% } else if (link.text.toLowerCase().includes('bio')) { %>
          <button type="button" class="team-bio-btn" data-bs-toggle="modal" data-bs-target="#teamModal<%= member.id || member.name.replace(/\s+/g, '') %>">
            <%= link.text %>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
              <polyline points="15 3 21 3 21 9"></polyline>
              <line x1="10" y1="14" x2="21" y2="3"></line>
            </svg>
          </button>
        <% } %>
      <% }) %>
    </div>
    <% } %>  
  </div>
</div>
