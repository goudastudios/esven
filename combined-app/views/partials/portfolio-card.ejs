<div
  class="portfolio-company"
  data-item="<%= JSON.stringify({
    id: company.id,
    name: company.name,
    tags: company.tags || [],
    categories: company.categories || []
  }) %>"
>
  <div class="company-logo-container">
    <img src="<%= company.logo %>" alt="<%= company.name %>" />
    <% if (company.status) { const status = company.status.toLowerCase(); const
    statusText = status === 'exit' ? 'Exit' : status === 'inactive' ? 'Inactive'
    : status === 'unicorn' ? 'Unicorn ($1B+)' : status === 'soonicorn' ?
    'Soonicorn ($500M-$999M)' : status === 'funds' ? 'Investment Fund' : status
    === 'public' ? 'Public' : 'Active'; %>
    <div class="company-status <%= status %>"><%= statusText %></div>
    <% } %>
  </div>
  <div class="company-info">
    <h3 class="company-name"><%= company.name %></h3>
    <p class="company-description"><%= company.description %></p>

    <% if (company.metrics && company.metrics.length) { %>
    <div class="company-metrics">
      <% company.metrics.forEach(metric => { %>
      <div class="company-metric">
        <div class="company-metric-value"><%= metric.value %></div>
        <div class="company-metric-label"><%= metric.label %></div>
      </div>
      <% }) %>
    </div>
    <% } %>

    <!--   <% if (company.tags && company.tags.length) { %>
      <div class="company-tags">
        <% company.tags.forEach(tag => { %>
          <span class="company-tag"><%= tag %></span>
        <% }) %>
      </div>
    <% } %> -->

    <% if (company.links && company.links.length) { %>
    <div class="portfolio-company-links">
      <% company.links.forEach((link, index) => { %>
      <a
        href="<%= link.url %>"
        class="portfolio-company-link <%= index === 0 ? 'primary' : '' %>"
        target="_blank"
        rel="noopener noreferrer"
      >
        <%= link.text %> <% if (index === 1) { %>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path
            d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"
          ></path>
          <polyline points="15 3 21 3 21 9"></polyline>
          <line x1="10" y1="14" x2="21" y2="3"></line>
        </svg>
        <% } %>
      </a>
      <% }) %>
    </div>
    <% } %>
  </div>
</div>
